        <item name="twitter_tint_color">@android:color/black</item>
        <item name="web_background_color">@color/pingeborg_yellow</item>
        <item name="web_tint_color">@android:color/black</item>
        <item name="shop_background_color">@color/pingeborg_yellow</item>
        <item name="shop_tint_color">@android:color/black</item>
        <item name="wikipedia_background_color">@color/pingeborg_yellow</item>
        <item name="wikipedia_tint_color">@android:color/black</item>
        <item name="linkedin_background_color">@color/pingeborg_yellow</item>
        <item name="linkedin_tint_color">@android:color/black</item>
        <item name="flickr_background_color">@color/pingeborg_yellow</item>
        <item name="flickr_tint_color">@android:color/black</item>
        <item name="soundcloud_background_color">@color/pingeborg_yellow</item>
        <item name="soundcloud_tint_color">@android:color/black</item>
        <item name="itunes_background_color">@color/pingeborg_yellow</item>
