<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pingeborg" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/pingeborg_yellow</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/pingeborg_dark_yellow</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/pingeborg_green</item>

        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <!-- Animated Arrow/BurgerButton -->
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <style name="AppTheme.CollapsedToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    <style name="AppTheme.ExpandedToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textColorSecondary">@android:color/transparent</item>
    </style>

    <style name="ContentBlocksTheme.AudioPlayer" parent="ContentBlocksTheme">
        <item name="android:background">@color/pingeborg_yellow</item>
        <item name="android:textColor">@color/audio_player_tint_color</item>
        <item name="audio_player_button_tint">@color/audio_player_tint_color</item>
        <item name="audio_player_notification_background">@color/pingeborg_yellow</item>
        <item name="audio_player_default_asset_drawable">@drawable/default_audioplayer_image</item>
    </style>

    <style name="ContentBlocksTheme.AudioPlayer.MovingBars">
        <item name="barColor">@color/audio_player_tint_color</item>
    </style>

    <style name="ContentBlocksTheme.AudioPlayer.ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:progressDrawable">@drawable/custom_song_progress_bar</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="ContentBlocksTheme.Links" parent="ContentBlocksTheme">
